<div id="login">
  <h2>Login to get started</h2>
  <%= form_tag(:controller => "sessions", :action => "create") do %>
    <table class="table">
      <tr>
        <td><%= label_tag :username %></td>
        <td><%= text_field_tag :username, nil, :placeholder => "Enter username" %></td>
      </tr>
      <tr>
        <td><%= label_tag :password %></td>
        <td><%= password_field_tag :password, nil, :placeholder => "Enter Password" %></td>
      </tr>
      <tr>
        <td><%= submit_tag "Login", :class => "btn" %></td>
        <td><%= link_to "Sign Up", new_admin_path %></td>
      </tr>
    </table>
  <% end %>
</div>